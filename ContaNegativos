algoritmo "ContaNegativos"

var
  n, c, totn: Inteiro

inicio
      c <- 1
      totn <- 0
      repita
            escreva("Digite um numero: ")
            leia(n)
            se (n<0) entao
               totn <- totn + 1
            fimse
            c <- c + 1
      ate (c > 5 )
      escreval("Foi digitado ",totn," valores negativos.")
fimalgoritmo
