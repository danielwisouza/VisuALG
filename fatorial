algoritmo "fatorial"

var
 c, n, f : Inteiro
 r:Caractere
inicio
repita
      Escreva("Digite um numero: ")
      leia(n)
      c <-n
      f <- 1
      repita
            f <- f * c
            c<- c -1
      ate (c < 1 )
      escrevaL("O valor fatorial de ",n," Ã© igual a ",f)
      esCREVA("QUERCONTINUAR? [S/N] ")
      leia(r)
      limpatela
ate (R = "N")
fimalgoritmo
